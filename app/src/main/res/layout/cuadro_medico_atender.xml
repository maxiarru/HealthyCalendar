<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MyAdapterAgendarTurnoPaciente"
    >

    <LinearLayout
        android:id="@+id/cuadroTurnoPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:alwaysDrawnWithCache="false"
        android:background="@drawable/dialog_container2"
        android:duplicateParentState="true"
        android:orientation="vertical"
        android:scrollbarFadeDuration="250"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_container"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÂ° : "
                    android:textColor="@color/colorPrimary"
                    ></TextView>

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/txtnroTurnoatender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>


                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/txtFechaatender"
                ></TextView>

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:id="@+id/txtHorario"
                ></TextView>

            <Button
                android:id="@+id/cbAtender"
                android:layout_width="65dp"
                android:layout_height="22dp"
                android:layout_marginLeft="80dp"
                android:checked="false"
                android:textSize="11dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/buttom"
                android:layout_marginRight="5dp"
                android:text="Atender "></Button>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>