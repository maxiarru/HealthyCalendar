<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"  android:layout_height="100dp" android:layout_width="400dp">

<!-- color de fondo -->
<solid android:color="@color/colorAccent" />

<!-- curvatura de las esquinas -->
<corners android:radius="5dp" />

<!-- padding para dejar una separacin prudencial entre los elementos conetenidos y el borde -->
<padding android:left="2dp" android:top="1dp" android:right="2dp" android:bottom="2dp"/>

<!-- borde -->
<stroke
    android:width="1dp"
    android:color="@android:color/background_dark" />

</shape>